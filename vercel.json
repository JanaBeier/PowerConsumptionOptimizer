{
  "version": 2,
  "name": "power-consumption-optimizer",
  "public": true,
  "cleanUrls": true,
  "trailingSlash": false,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/app.js",
      "destination": "/public/app.js"
    },
    {
      "source": "/index.html",
      "destination": "/public/index.html"
    },
    {
      "source": "/(.*\\.(png|jpg|jpeg|gif|svg|mp4|avi|mov|ico|css|js))",
      "destination": "/public/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/public/index.html"
    }
  ]
}